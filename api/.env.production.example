# Gamatrain AI Server - Production Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Provider Selection
# Options: ollama (local) | groq (cloud-free) | openrouter (cloud)
# =============================================================================
PROVIDER=ollama

# =============================================================================
# Ollama Settings (LOCAL - for development/self-hosted)
# =============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gamatrain-qwen2.5

# =============================================================================
# Groq Settings (CLOUD - FREE! Get key from https://console.groq.com)
# Recommended for production - fast and free tier available
# =============================================================================
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# =============================================================================
# OpenRouter Settings (alternative cloud provider)
# =============================================================================
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free

# =============================================================================
# OpenAI Settings (for compatibility)
# =============================================================================
OPENAI_API_KEY=YOUR_API_KEY

# =============================================================================
# Server Settings
# =============================================================================
HOST=0.0.0.0
PORT=8001

# =============================================================================
# Gamatrain API (for fetching blog content)
# =============================================================================
GAMATRAIN_API_URL=https://api.gamaedtech.com/api/v1
GAMATRAIN_AUTH_TOKEN=

# =============================================================================
# RAG Settings
# =============================================================================
STORAGE_DIR=./storage
CUSTOM_DOCS_PATH=../data/custom_docs.json
SIMILARITY_THRESHOLD=0.45
MAX_TOKENS=1024

# =============================================================================
# SQL Server Settings (for FAISS school data)
# Required for building FAISS index from school database
# =============================================================================
DB_SERVER=
DB_NAME=stagegamacoreapp
DB_DRIVER=ODBC Driver 18 for SQL Server

# Optional: Add username/password if not using Windows Authentication
# If using Windows Authentication, leave these commented out
# DB_USERNAME=your_username
# DB_PASSWORD=your_password

# Connection string will be built as:
# mssql+pyodbc://{DB_SERVER}/{DB_NAME}?driver={DB_DRIVER}&TrustServerCertificate=yes

# =============================================================================
# FAISS Settings
# Configuration for vector search functionality
# =============================================================================
FAISS_INDEX_PATH=faiss_schools.index
METADATA_PATH=faiss_schools_meta.pkl
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# FAISS search parameters
FAISS_TOP_K=5
FAISS_SEARCH_THRESHOLD=0.7
